{
  "name": "finx-accelerator-microservices",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "build": "nx run-many --target=build --all",
    "test": "nx run-many --target=test --all",
    "lint": "nx run-many --target=lint --all",
    "dev": "nx run-many --target=serve --all --parallel",
    "graph": "nx graph",
    "graph:affected": "nx affected:graph",
    "graph:java": "nx graph --focus=lang:java",
    "graph:nodejs": "nx graph --focus=lang:nodejs",
    "graph:python": "nx graph --focus=lang:python",
    "graph:apps": "nx graph --focus=type:application",
    "graph:libs": "nx graph --focus=type:library"
  },
  "devDependencies": {
    "@nx/gradle": "^17.0.0",
    "@nx/node": "^17.0.0",
    "@nx/python": "^17.0.0",
    "@nx/workspace": "^17.0.0",
    "nx": "^17.3.2"
  }
}